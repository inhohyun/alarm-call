<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Alarm"
        android:usesCleartextTraffic="true">
<!--        usesCleartextTraffic : 통신을 위해 인터넷 권한을 추가해준다.-->
        <activity
            android:name="com.shoppi.alarm.Maintest_Activity"
            android:exported="true">
            <intent-filter>

<!--                android.intent.action.MAIN = 어플이 시작할때 활동 시작-->
                <action android:name="android.intent.action.MAIN" />
<!--                카테고리.LAUNCHER = 액티비티가 어플리케이션에 표시
                    액션 하나당 최소 한개의 카테고리가 있어야 한다.-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.shoppi.alarm.MainActivity"> </activity>
        <activity android:name="com.shoppi.alarm.onoff.SwitchButton"> </activity>
        <receiver android:name="com.shoppi.alarm.AlarmReceiver"/>


    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>